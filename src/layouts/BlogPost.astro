---
import Layout from './Layout.astro';

interface Props {
    title: string;
    publishedDate: Date;
    description: string;
}

const { title, publishedDate, description } = Astro.props;
---

<Layout title={title}>
    <article class="prose lg:prose-xl mx-auto px-4 py-8">
        <div class="mb-8">
            <h1 class="text-4xl font-bold mb-2">{title}</h1>
            <time class="text-gray-600" datetime={publishedDate.toISOString()}>
                {publishedDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                })}
            </time>
            <p class="text-gray-700 mt-2">{description}</p>
        </div>
        <div class="prose-lg">
            <slot />
        </div>
    </article>
</Layout>
