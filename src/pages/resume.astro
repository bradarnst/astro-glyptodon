---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Resume">
  <h1>Resume</h1>
  <section>
    <h2>Experience</h2>
    <div class="experience">
      <h3>Your Position</h3>
      <p>Company Name • 2023 - Present</p>
      <ul>
        <li>Key achievement 1</li>
        <li>Key achievement 2</li>
      </ul>
    </div>
  </section>

  <section>
    <h2>Education</h2>
    <div class="education">
      <h3>Your Degree</h3>
      <p>University Name • Graduation Year</p>
    </div>
  </section>

  <section>
    <h2>Skills</h2>
    <ul>
      <li>Skill 1</li>
      <li>Skill 2</li>
      <li>Skill 3</li>
    </ul>
  </section>

  <style>
    section {
      margin: 2rem 0;
    }
    .experience, .education {
      margin-bottom: 1.5rem;
    }
    h3 {
      margin-bottom: 0.5rem;
    }
  </style>
</Layout>
